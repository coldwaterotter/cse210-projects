//while loop
string response = "yes";
while (response == "yes")
{
  Console.Write("Do you want to continue? ");
    response = Console.ReadLine();
}

//do while 
string response;
do
{
    Console.Write("Do you want to continue? ");
    response = Console.ReadLine();
} while (response == "yes");

//for loops
for (int i = 0; i < 10; i++)
{
    Console.WriteLine(i);
}

